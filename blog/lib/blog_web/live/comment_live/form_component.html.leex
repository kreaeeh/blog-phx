<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "comment-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>
<%= hidden_input f, :user_id, value: @current_user_id %>

  <%= label f, :content %>
  <%= text_input f, :content %>
  <%= error_tag f, :content %>
<br><br>
  <%= submit "Save", phx_disable_with: "Saving..." %>
</form>
